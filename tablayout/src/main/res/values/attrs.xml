<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LSTabLayout">
        <!--滑动模式-->
        <attr name="mode" format="enum">
            <enum name="fixed" value="0" />
            <enum name="scroll" value="1" />
        </attr>
        <!--mode = scroll 时 不能滑动时的对齐方式-->
        <attr name="mode_scroll_gravity" format="enum">
            <enum name="none" value="0" />
            <enum name="center" value="1" />
        </attr>
        <!--tab最新长度-->
        <attr name="tab_min_width" format="dimension" />
        <!--tab 字体颜色-->
        <attr name="tab_text_color" format="color" />
        <!--tab 字体颜色-->
        <attr name="tab_text_select_color" format="color" />
        <!--tab 字体大小-->
        <attr name="tab_text_size" format="dimension" />
        <!--指示器高度-->
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_style" format="enum">
            <enum name="fill" value="0" />
            <enum name="text" value="1" />
            <enum name="text_half" value="2" />
        </attr>
        <!--指示器颜色-->
        <attr name="indicator_color" format="color" />
        <!--是否显示指示器-->
        <attr name="indicator_show" format="boolean" />
    </declare-styleable>
</resources>